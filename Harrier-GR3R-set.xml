<?xml version="1.0"?>

<PropertyList>

<!-- http://pjedvaj.eu5.org -->

<sim>

<!-- Info -->
<description>Hawker Siddeley Harrier GR3 ( Rembrandt)</description>
<author>Petar Jedvaj, Andy Ross, StuartC</author>
<status>alpha v0.2.5</status>
<rating>
<FDM type="int">4</FDM>
<systems type="int">1</systems>
<cockpit type="int">3</cockpit>
<model type="int">4</model>
</rating>

<flight-model>yasim</flight-model>
<aero>Harrier-GR3</aero>
<fuel-fraction>1</fuel-fraction>

<startup>
<splash-texture>Aircraft/Harrier-GR3/Splash.png</splash-texture>
</startup>

<!-- Models -->
<model>
<path>Aircraft/Harrier-GR3/Models/Harrier_GR3.xml</path>
</model>

<submodels>
<serviceable type="bool">true</serviceable>
<path>Aircraft/Harrier-GR3/Models/Submodels.xml</path>
</submodels>

<!-- System Settings -->
<systems>
<electrical>
<path>Aircraft/Generic/generic-electrical.xml</path>
</electrical>
<autopilot>
         <path>Aircraft/Harrier-GR3/Systems/autopilot.xml</path>
      </autopilot>
</systems>

<sound>
<path>Aircraft/Harrier-GR3/Sounds/Sound.xml</path>
</sound>

<flaps>
<setting>0.0</setting>
<setting>0.2</setting>
<setting>0.4</setting>
<setting>0.6</setting>
<setting>0.8</setting>
<setting>1.0</setting>
</flaps>

<!-- View Settings -->
<virtual-cockpit archive="y">true</virtual-cockpit>
<allow-toggle-cockpit archive="y">true</allow-toggle-cockpit>

<view n="0">
<internal archive="y">true</internal>
<config>
<x-offset-m archive="y">0.00</x-offset-m>
<y-offset-m archive="y">0.60</y-offset-m>
<z-offset-m archive="y">3.85</z-offset-m>
<default-field-of-view-deg type="double">60.0</default-field-of-view-deg>
<pitch-offset-deg archive="y">-21</pitch-offset-deg>
</config>
</view>

<view n="1">
<config>
<target-z-offset-m archive="y">8</target-z-offset-m>
<pitch-offset-deg archive="y">10</pitch-offset-deg>     
</config>
</view>

<view n="2">
<config>
<target-z-offset-m archive="y">8</target-z-offset-m>
<pitch-offset-deg archive="y">10</pitch-offset-deg>     
</config>
</view>

<view n="3">
<config>
<target-z-offset-m archive="y">8</target-z-offset-m>
<pitch-offset-deg archive="y">10</pitch-offset-deg>     
</config>
</view>

<view n="4">
<config>
<target-z-offset-m archive="y">8</target-z-offset-m>
<pitch-offset-deg archive="y">10</pitch-offset-deg>     
</config>
</view>

<view n="5">
<config>
<target-z-offset-m archive="y">8</target-z-offset-m>
<pitch-offset-deg archive="y">10</pitch-offset-deg>     
</config>
</view>

<view n="6">
<config>
<target-z-offset-m archive="y">8</target-z-offset-m>
<pitch-offset-deg archive="y">10</pitch-offset-deg>     
</config>
</view>

<!-- HUD Settings -->
<hud>
<path n="1">Aircraft/Harrier-GR3/HUD.xml</path>
<visibility n="0" type="bool">false</visibility>
<visibility n="1" type="bool">true</visibility>
<current-color>0</current-color>
<color>
<transparent type="bool">true</transparent>
<antialiased type="bool">true</antialiased>
<brightness type="float">1.0</brightness>
<alpha type="float">0.7</alpha>
</color>
<palette>
<color n="0">
<red type="float">0.5</red>
<green type="float">1.0</green>
<blue type="float">0.0</blue>
</color>
<color n="1">
<red type="float">1.0</red>
<green type="float">0.0</green>
<blue type="float">0.0</blue>
</color>
</palette>
<clipping>
            <left type="double">-112</left>
            <right type="double">110</right>
            <top type="double">5</top>
            <bottom type="double">-210</bottom>
         </clipping>
</hud>

<!-- Help -->
<help>
<title>Hawker Siddeley Harrier GR3</title>
<key>
<name>m/M</name>
<desc>Thrust Vector</desc>
</key>
<key>
<name>j/k</name>
<desc>Air Brake</desc>
</key>
<key>
<name>h</name>
<desc>HUD</desc>
</key>
<key>
<name>e</name>
<desc>Gun</desc>
</key>
<key>
<name>c</name>
<desc>Canopy</desc>
</key>
</help>

<!-- Game Menu -->
<menubar>
<default>
<menu n="100">
<label>Harrier GR3</label>
<enabled type="bool">true</enabled>
<item>
<label>Select Livery</label>
<binding>
<command>nasal</command>
<script>aircraft.livery.dialog.open()</script>
</binding>
</item>
</menu>
</default>
</menubar>

