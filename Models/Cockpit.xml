<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

<path>Cockpit.ac</path>

<!-- Shaders / Materials -->

<animation>
<type>material</type>
<object-name>FrontPanel</object-name>
<object-name>LeftPanel</object-name>
<object-name>RightPanel</object-name>
<object-name>Panel</object-name>
<object-name>Panel1</object-name>
<object-name>Panel2</object-name>
<texture>Liveries/Cockpit.png</texture>
</animation>

<animation>
<type>shader</type>
<shader>chrome</shader>
<texture>Aircraft/Generic/Effects/glass_shader.png</texture>
<object-name>FE541</object-name>
</animation>

<animation>
<type>noshadow</type>
<object-name>FE541</object-name>
<object-name>HUDGlass</object-name>
</animation>

<!-- Stick -->

<animation>
<type>rotate</type>
<object-name>Stick</object-name>	 
<property>controls/flight/aileron[0]</property>
<factor>17</factor>
<offset-deg>0</offset-deg>
<center>
<x-m>-15.74</x-m>
<y-m>0</y-m>
<z-m>-6.27</z-m>
</center>
<axis>
<x>-1</x>
<y>0</y>
<z>0</z>
</axis>
</animation>

<animation>
<type>rotate</type>
<object-name>Stick</object-name>	 
<property>controls/flight/elevator[0]</property>
<factor>17</factor>
<offset-deg>0</offset-deg>
<center>
<x-m>-15.74</x-m>
<y-m>0</y-m>
<z-m>-6.27</z-m>
</center>
<axis>
<x>0</x>
<y>-1</y>
<z>0</z>
</axis>
</animation>

<!-- Pedals -->

<animation>
<type>translate</type>
<object-name>LPedal</object-name>
<property>controls/flight/rudder[0]</property>
<factor>.05</factor>
<axis>
<x>1</x>
<y>0</y>
<z>0</z>
</axis>
</animation>

<animation>
<type>translate</type>
<object-name>RPedal</object-name>
<property>controls/flight/rudder[0]</property>
<factor>.05</factor>
<axis>
<x>-1</x>
<y>0</y>
<z>0</z>
</axis>
</animation>

<!-- Throttle -->

<animation>
<type>rotate</type>
<object-name>ThrottleLever</object-name>	 
<property>controls/engines/engine/throttle</property>
<factor>45</factor>
<offset-deg>-25</offset-deg>
<center>
<x-m>-15.59</x-m>
<y-m>0.33</y-m>
<z-m>-6.14</z-m>
</center>
<axis>
<x>0</x>
<y>-1</y>
<z>0</z>
</axis>
</animation>

<!-- Nozzle Lever -->

<animation>
<type>rotate</type>
<object-name>VectorLever</object-name>	 
<property>controls/engines/engine/mixture</property>
<factor>45</factor>
<offset-deg>-25</offset-deg>
<center>
<x-m>-15.58</x-m>
<y-m>0.29</y-m>
<z-m>-6.14</z-m>			
</center>
<axis>
<x>0</x>
<y>-1</y>
<z>0</z>
</axis>
</animation>

</PropertyList>